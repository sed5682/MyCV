$color-1 = #75787c
$color-2 = rgba(128, 128, 128, 0.2)
$color-3 = rgba(128, 128, 128, 0.5)
$color-4 = rgba(50, 50, 50, 0.4)
$color-5 = rgba(80, 80, 80, 0.2)
$color-6 = rgba(50, 50, 50, 0.7)
$color-7 = #3b5998
$display = flex

body
html
    height 100%
    width 100%
    margin 0
    font-family arial sans-serif
    color white

.bg
    background-image url("/Pictures/bg2.jpg")
    background-size cover
    position fixed
    width 100%
    height 100%
    z-index -1

.name
    display $display
    height 70vw
    align-items center
    justify-content center
    order 2
    color white

    h1
        font-size 10vw
        border-bottom white solid 0.1vw

        &:hover
            transition 1.3s
            border-bottom $color-1 solid 0.1vw

.education-container
    h3
        font-size 2vw

.education-container
.skills-container
    display $display
    justify-content space-around

#title
    color white
    background linear-gradient(to right, $color-2, $color-3 70%)
    padding 1vw
    border-radius 1vw

.navbar
    display $display
    justify-content center
    padding-bottom 0
    order 1

    li
        text-align center
        padding 1.2vw
        color white
        text-decoration none
        font-size 2vw
        border-bottom 0.1vw solid $color-4
        padding-left 2vw
        padding-right 2vw
        list-style none

        a
            color white
            text-decoration none
            list-style none
            margin-bottom 0

        &:hover
            background-color $color-1
            border-top-left-radius 1.5vw
            border-top-right-radius 1.5vw
            background linear-gradient(to right, $color-5, $color-6 50%)

    ul
        li
            margin-bottom 0

@media screen and (max-width: 600px)
    .navbar
        display block
        padding 0
        margin 0

        li
            float none
            display block

.active
    background linear-gradient(to right, $color-5, $color-6 50%)
    border-top-left-radius 1.5vw
    border-top-right-radius 1.5vw

.wrapper
    display flex
    flex-flow row wrap
    text-align center

    >*
        padding 1vw
        flex 1 100%

p
i
    font-size 2vw

	a
        text-decoration none
		color white 

.img-container
    display flex
    justify-content center

    a
        text-decoration none
        color white
        background-color $color-7
        padding 2vw
        font-size 2vw
        width 5vw
        text-align center
        border-radius 50%
        margin-right 1vw

h2
    display flex
    justify-content center
    align-items center baseline
    flex-flow row wrap
    font-size 2.2vw

#sc-title
    color white
    background linear-gradient(to right, $color-2, $color-3 70%)
    padding 1vw
    border-radius 1vw

.skills-container
    display $display
    justify-content space-around
    flex-wrap wrap

    h3
        border-bottom white solid 0.2vw
        padding 1vw
        border-radius 2vw
        font-size 2vw

.table
	font-size 1.5vw

